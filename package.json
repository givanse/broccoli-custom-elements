{
  "name": "broccoli-custom-elements",
  "version": "0.0.3",
  "description": "Build and register HTML custom elements",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "broccoli build",
    "build:serve": "broccoli serve",
    "test": "broccoli build -e tests && mocha dist/tests/*-test.js --reporter tap",
    "test:watch": "testem",
    "prepublish": "npm run build",
    "debug:build": "node --nolazy --inspect-brk=9229 ./node_modules/.bin/broccoli build -e tests",
    "debug:test": "node --nolazy --inspect-brk=9229 ./node_modules/.bin/mocha dist/tests/index.js"
  },
  "keywords": [
    "broccoli",
    "plugin",
    "html",
    "custom elements",
    "web components",
    "shadow dom v0",
    "shadow dom v1",
    "html imports"
  ],
  "author": "givanse",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:givanse/broccoli-custom-elements.git"
  },
  "homepage": "",
  "files": [
    "dist/",
    "!dist/tests"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "broccoli": "^3.1.2",
    "broccoli-cli": "^1.0.0",
    "broccoli-test-helper": "^2.0.0",
    "broccoli-typescript-compiler": "^4.1.0",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "testem": "^2.17.0",
    "ts-node": "^8.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "broccoli-plugin": "^2.1.0",
    "fs-tree-diff": "^2.0.1",
    "heimdalljs": "^0.2.6",
    "heimdalljs-logger": "^0.1.10"
  },
  "engines": {
    "node": "8.* || >= 10.*"
  }
}
